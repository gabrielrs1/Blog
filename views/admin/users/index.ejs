<%- include ("../../partials/header.ejs") %>
<body>
    <%- include ("../../partials/navbar.ejs") %>

    <div class="container">
        <hr>
        <h2>Usuários</h2>
        <a href="/admin/users/create" class="btn btn-success">Criar novo usuário</a>
        <hr>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Email</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(user => { %>
                    <tr>
                        <td><%= user.id %></td>
                        <td><%= user.email %></td>
                    </tr> 
                <% }) %>
            </tbody>
        </table>
    </div>

    <%- include ("../../partials/scripts.ejs") %>
</body>
</html>