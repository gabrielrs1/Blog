<%- include ("../../partials/header.ejs") %>
<body>
    <%- include ("../../partials/navbar.ejs") %>
    <div class="container">
        <hr>
        <h2>Categorias</h2>
        <a href="/admin/categories/new" class="btn btn-success">Criar nova categoria</a>
        <hr>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Títlo</th>
                    <th>Slug</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                
                <% categories.forEach(category => { %>
                    <tr>
                        <th><%= category.id %></th>
                        <th><%= category.title %></th>
                        <th><%= category.slug %></th>
                        <th>
                            <a href="/admin/categories/edit/<%= category.id %>" class="btn btn-warning">Editar</a>
                            <form action="/categories/delete" method="POST" style="display: inline;" onsubmit="confirmaUsuario(event, this)">
                                <input type="hidden" name="id" value="<%= category.id %>">
                                <button class="btn btn-danger">Deletar</button>
                            </form>
                        </th>
                    </tr> 
                <% }) %>
            </tbody>
        </table>
    </div>
    

    <%- include ("../../partials/scripts.ejs") %>
    <script>
        function confirmaUsuario(event, form) {
            event.preventDefault()
            var decision = confirm("Deseja excluir está categoria?")
            if(decision) {
                form.submit()
            }
        }
    </script>
</body>
</html>